      </div>

      <div class="modal-body">
        <!-- Post a Comment Form -->
        <form action="">
            
            <!-- Enter Name -->
            <div class="form-group">
                Handle:
                <input class="form-control" id="name" placeholder="Enter Handle Here, ex. @User" name="name">
            </div>
            
            <!-- Enter Comment -->
